{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "ignoreUnknown": true,
        "ignore": ["dist", ".vscode", "node_modules", ".next"]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useImportType": "off",
                "useNodejsImportProtocol": "off"
            },
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error",
                "useExhaustiveDependencies": "off"
            },
            "suspicious": {
                "noConsoleLog": "error",
                "noShadowRestrictedNames": "off",
                "noArrayIndexKey": "off"
            },
            "complexity": {
                "noForEach": "off"
            },
            "a11y": {
                "useButtonType": "off",
                "useKeyWithClickEvents": "off"
            }
        }
    }
}
